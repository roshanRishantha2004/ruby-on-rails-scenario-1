<h1 class="text-center mb-4">Sign Up</h1>

<%= form_with model: @customer, url: sign_up_path, class: "p-4 border rounded shadow-sm" do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>
